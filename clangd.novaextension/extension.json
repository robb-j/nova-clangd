{
  "identifier": "robb-j.clangd",
  "name": "Clangd",
  "organization": "robb-j",
  "description": "A proof-of-concept clangd LanguageClient for Nova",
  "version": "0.0.0",
  "main": "main.js",

  "entitlements": {
    "process": true,
    "filesystem": "readwrite"
  },

  "activationEvents": ["onLanguage:c", "onLanguage:cpp", "onWorkspaceContains:compile_commands.json"],

  "config": [
    {
      "key": "robb-j.clangd.path",
      "title": "Language Server Path",
      "type": "path",
      "placeholder": "/usr/bin/clangd",
      "default": "/usr/bin/clangd"
    }
  ],

  "commands": {
    "extensions": [
      {
        "title": "Restart Server",
        "command": "robb-j.clangd.restart"
      }
    ]
  }
}
